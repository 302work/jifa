					<AutoFormElement>
						<Property name="label">完成时间</Property>
						<Property name="property">finishDate</Property>
						<Editor/>
					</AutoFormElement>
					<AutoFormElement>
						<Property name="label">订单ID</Property>
						<Property name="property">id</Property>
						<Editor/>
					</AutoFormElement>
					<AutoFormElement>
						<Property name="property">isDeleted</Property>
						<Editor/>
